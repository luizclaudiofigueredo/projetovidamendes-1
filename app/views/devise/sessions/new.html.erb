<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="flex justify-center items-center h-screen bg-gray-800">
    <div class="max-w-md w-full bg-gray-900 rounded p-6 space-y-4">
        <div class="mb-4">
            <p class="text-gray-400">Sign In</p>
            <h2 class="text-xl font-bold text-white">Welcome to Projeto Vida Mendes</h2>
        </div>
        <div>
            <%= f.email_field :email, placeholder: "Email", required: false, autofocus: true, class: "w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600" %>        </div>
        <div>
            <%= f.password_field :password, placeholder: "Password", required: false, class: "w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600" %>
        </div>
        <div>
            <button class="w-full py-4 bg-orange-600 hover:bg-orange-700 rounded text-sm font-bold text-gray-50 transition duration-200">Sign In</button>
        </div>
        <div class="flex items-center justify-between">
            <div>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-gray-200 hover:underline" %>
            </div>
        </div>
    </div>
</section>
<% end %>