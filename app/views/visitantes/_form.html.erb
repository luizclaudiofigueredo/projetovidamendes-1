<%= form_with(model: visitante, class: "contents") do |form| %>
  <% if visitante.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(visitante.errors.count, "error") %> prohibited this visitante from being saved:</h2>

      <ul>
        <% visitante.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: "block shadow rounded-md border border-gray-400 rounded-lg focus:outline-none focus:border-blue-400 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :sobrenome %>
    <%= form.text_field :sobrenome, class: "block shadow rounded-md border border-gray-400 rounded-lg focus:outline-none focus:border-blue-400 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :telefone %>
    <%= form.text_field :telefone, class: "block shadow rounded-md border border-gray-400 rounded-lg focus:outline-none focus:border-blue-400 px-3 py-2 mt-2 w-full", data: { controller: "hello", mask: "(99) 99999-9999" } %>
  </div>

  <div class="my-5">
      <label for="gender" class="block text-gray-700 font-medium mb-2">Grupo</label>
      <select id="visitante_grupo" name="visitante[grupo]"
          class="border border-gray-400 p-2 w-full rounded-lg focus:outline-none focus:border-blue-400" required>
          <option value=1>Crian√ßa</option>
          <option value=2>Adolescente</option>
          <option value=3>Jovem</option>
          <option value=4>Adulto</option>
          <option value=5>Idoso</option>
      </select>
  </div>  

 <div class="my-5">
    <%= form.label :observacoes %>
    <%= form.text_area :observacoes, rows: 4, class: "block shadow rounded-md border border-gray-400 rounded-lg focus:outline-none focus:border-blue-400 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit 'Salvar', class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>